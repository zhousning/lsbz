- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "wpforms", text: t(controller_name + "." + action_name + '.title')
          = link_to "#{request.url}".sub("edit", ""), :class => "button button-small pull-right button-primary" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 

      - content_for :card_body do
        .container-fluid.p-0
          .row
            .col-md-6
              .row
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.name
                  = @exp_form.name
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.agtor
                  = @exp_form.agtor
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.idno
                  = @exp_form.idno
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.contact
                  = @exp_form.contact
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.email
                  = @exp_form.email
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.prj_name
                  = @exp_form.prj_name
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.prj_address
                  = @exp_form.prj_address
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.prj_attr
                  = @exp_form.prj_attr
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.prj_type
                  = @exp_form.prj_type
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.east
                  = @exp_form.east
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.west
                  = @exp_form.west
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.south
                  = @exp_form.south
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.north
                  = @exp_form.north
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.cmp_type
                  = @exp_form.cmp_type
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.region
                  = @exp_form.region
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.area
                  = @exp_form.area
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.matter
                  = @exp_form.matter
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.taxid
                  = @exp_form.taxid
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.bank
                  = @exp_form.bank
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.account
                  = @exp_form.account
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.vat
                  = @exp_form.vat
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.prs
                  = @exp_form.prs
              
                .col-md-6.mb-3.mr-3
                  = Setting.exp_forms.state
                  = @exp_form.state
              .row
                - @exp_form.attachments.each_with_index do |e, i|
                  .col-md-12
                    = link_to File.basename(e.file_url), download_attachment_exp_form_path(@exp_form.id, :number => i, :ft => '')
            .col-md-6
              .row
                .col-md-6.mb-3.mr-3
                  = Setting.prst_forms.title
                  = @prst_form.title
              
                .col-md-6.mb-3.mr-3
                  = Setting.prst_forms.info
                  = @prst_form.info
                - @prst_form.enclosures.each do |e|
                  .col-md-6
                    = image_tag e.file_url(:small_width), :class => "w-100"
              .row
                - @prst_form.attachments.each_with_index do |e, i|
                  .col-md-12
                    = link_to File.basename(e.file_url), download_attachment_prst_form_path(@prst_form.id, :number => i, :ft => '')
            .col-md-6
              .row
                .col-md-6.mb-3.mr-3
                  = Setting.aprv_forms.title
                  = @aprv_form.title
              
                .col-md-6.mb-3.mr-3
                  = Setting.aprv_forms.info
                  = @aprv_form.info
              
              .row
                - @aprv_form.enclosures.each do |e|
                  .col-md-6
                    = image_tag e.file_url(:small_width), :class => "w-100"
              .row
                - @aprv_form.attachments.each_with_index do |e, i|
                  .col-md-12
                    = link_to File.basename(e.file_url), download_attachment_aprv_form_path(@aprv_form.id, :number => i, :ft => '')
            .col-md-6
              .row
                .col-md-6.mb-3.mr-3
                  = Setting.pay_forms.title
                  = @pay_form.title
                .col-md-6.mb-3.mr-3
                  = Setting.pay_forms.info
                  = @pay_form.info
              .row
                - @pay_form.enclosures.each do |e|
                  .col-md-6
                    = image_tag e.file_url(:small_width), :class => "w-100"
              .row
                - @pay_form.attachments.each_with_index do |e, i|
                  .col-md-12
                    = link_to File.basename(e.file_url), download_attachment_pay_form_path(@pay_form.id, :number => i, :ft => '')
                  
            .col-md-6
              .card-body
                = render 'form'

      = render "layouts/bootstrap/card"
