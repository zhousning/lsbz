- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
          = link_to "/#{controller_name}", :class => "button button-small  pull-right button-primary" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-md-8.offset-2
              .card-body
                .container-fluid
                  .row
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.cstr_forms.title
                      = @cstr_form.title
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.cstr_forms.info
                      = @cstr_form.info
                  
                  .row
                  
                  .row
                  
                    - @cstr_form.enclosures.each do |e|
                      .col-md-6
                        = image_tag e.file_url(:small_width), :class => "w-100"
                  
                  .row
                  
                  
                  .row
                    - @cstr_form.attachments.each_with_index do |e, i|
                      .col-md-12
                        = link_to File.basename(e.file_url), download_attachment_cstr_form_path(@cstr_form.id, :number => i, :ft => '')
                  
                  .row
                  
      = render "layouts/bootstrap/card"
