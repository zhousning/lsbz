                        = @exp_form.cstr_form.info
                    .row
                      - @exp_form.cstr_form.enclosures.each do |e|
                        .col-md-6
                          = image_tag e.file_url(:small_width), :class => "w-100"
                    .row
                      - @exp_form.cstr_form.attachments.each_with_index do |e, i|
                        .col-md-12
