                        .col-md-6
                          = image_tag e.file_url(:small_width), :class => "w-100"
                    .row
                      - @exp_form.pay_form.attachments.each_with_index do |e, i|
                        .col-md-6
                          = link_to URI.decode(File.basename(e.file_url)), download_attachment_pay_form_path(@pay_form.id, :number => i, :ft => '')
            -if @state > 4 
              .row.timeline-right
                .col-md-2
                  %p.timeline-date
                    工程施工
                .col-md-10
