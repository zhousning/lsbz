- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
          = link_to prospecting_exp_form_path(@exp_form), :class => "button button-small  pull-right button-primary mr-1" do
            = fa_icon " chevron-left", text: "移交工程部", right: false 
          = link_to opening_exp_forms_path, :class => "button button-small  pull-right button-primary mr-1" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-md-8.offset-2
              .card-body
                .container-fluid
                  .row
                    .col-sm-12
                      %h2.text-center
                        = "山东公用水务集团客户供水报装申请表" 
                    .col-sm-6
                      %p.text-left
                        = "经办人："
                        = @exp_form.agtor
                    .col-sm-6
                      %p.text-right
                        = @exp_form.created_at.strftime('%Y 年 %m 月 %d 日')
                  .row
                    .col-sm-12
                      %table.text-center.table.table-bordered
                        %tbody
                          %tr
                            %td
                              = Setting.exp_forms.name
                            %td
                              = @exp_form.name
                            %td
                              = Setting.exp_forms.idno
                            %td
                              = @exp_form.idno
                          %tr
                            %td
                              = Setting.exp_forms.contact
                            %td
                              = @exp_form.contact
                            %td
                              = Setting.exp_forms.email
                            %td
                              = @exp_form.email
                          %tr
                            %td
                              = Setting.exp_forms.prj_name
                            %td
                              = @exp_form.prj_name
                            %td
                              = Setting.exp_forms.prj_address
                            %td
                              = @exp_form.prj_address
                          %tr
                            %td
                              = Setting.exp_forms.prj_attr
                            %td
                              = @exp_form.prj_attr
                            %td
                              = Setting.exp_forms.prj_type
                            %td
                              = @exp_form.prj_type
                          %tr
                            %td
                              = Setting.exp_forms.east
                            %td
                              = @exp_form.east
                            %td
                              = Setting.exp_forms.west
                            %td
                              = @exp_form.west
                          %tr
                            %td
                              = Setting.exp_forms.south
                            %td
                              = @exp_form.south
                            %td
                              = Setting.exp_forms.north
                            %td
                              = @exp_form.north
                          %tr
                            %td
                              = Setting.exp_forms.cmp_type
                            %td
                              = @exp_form.cmp_type
                            %td
                              = Setting.exp_forms.region
                            %td
                              = @exp_form.region
                          %tr
                            %td
                              = Setting.exp_forms.area
                            %td
                              = @exp_form.area
                            %td
                              = Setting.exp_forms.matter
                            %td
                              = @exp_form.matter
                          %tr
                            %td
                              = Setting.exp_forms.taxid
                            %td
                              = @exp_form.taxid
                            %td
                              = Setting.exp_forms.bank
                            %td
                              = @exp_form.bank
                          %tr
                            %td
                              = Setting.exp_forms.account
                            %td
                              = @exp_form.account
                            %td
                              = Setting.exp_forms.vat
                            %td
                              = @exp_form.vat
                          %tr
                            %td
                              = Setting.exp_forms.prs
                            %td
                              = @exp_form.prs
                            %td
                              = Setting.exp_forms.state
                            %td
                              = @exp_form.state
                  .row
                    - @exp_form.attachments.each_with_index do |e, i|
                      .col-md-12
                        = link_to File.basename(e.file_url), download_attachment_exp_form_path(@exp_form.id, :number => i, :ft => '')
                  -#
                    .row
                      .offset-10.col-sm-2
                        - if @ware_house.state == Setting.ware_houses.completed
                          %h2.text-success.text-center.border.border-success
                            已入库
                        - elsif @ware_house.state == Setting.ware_houses.canceled
                          %h2.text-danger.text-center.border.border-danger
                            已作废
                    
                  .row
                  
                  
                  .row
                  
      = render "layouts/bootstrap/card"
